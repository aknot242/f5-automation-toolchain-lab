{
    "$schema": "https://raw.githubusercontent.com/F5Networks/f5-telemetry-streaming/master/src/nodejs/schema/base_schema.json",
    "class": "Telemetry",
    "controls": {
        "class": "Controls",
        "logLevel": "info"
    },
    "My_Poller": {
        "class": "Telemetry_System_Poller",
        "interval": 60
    },
    "My_Listener": {
        "class": "Telemetry_Listener",
        "port": 6514
    },
    "Kafka_Consumer": {
        "class": "Telemetry_Consumer",
        "type": "Kafka",
        "host": "{{ubuntuDockerHost}}",
        "protocol": "binaryTcp",
        "port": {{kafkaPort}},
        "topic": "{{kafkaTopic}}"
    },
    "StatsD_Consumer": {
        "class": "Telemetry_Consumer",  
        "type": "Statsd",
        "host": "{{ubuntuDockerHost}}",
        "protocol": "udp",
        "port": {{statsDPort}}
    },
    "ElasticSearch_Consumer": {
        "class": "Telemetry_Consumer",
        "type": "ElasticSearch",
        "host": "{{ubuntuDockerHost}}",
        "index": "{{elasticSearchIndex}}",
        "port": {{elasticSearchPort}},
        "protocol": "http",
        "dataType": "_doc"
    }
}
